<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Define styles for Professional Template -->

    <!-- Style for TextBlocks -->
    <Style TargetType="TextBlock" x:Key="PreviewTextStyle">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Style for Buttons -->
    <Style TargetType="Button" x:Key="ProfessionalButtonStyle">
        <Setter Property="Background" Value="#007BFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Style for the Main Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Style for Input TextBoxes -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>
</ResourceDictionary>
